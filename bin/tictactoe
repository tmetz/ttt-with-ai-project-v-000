    while command != 'exit'
      puts("Do you want to play 0, 1, or 2 player?")
      command = gets.strip
      case command
      when "0"
        new_game = Game.new(Players::Computer.new, Players::Computer.new)
      when "1"
        new_game = Game.new(Players::Human.new, Players::Computer.new)
      when "2"
        new_game = Game.new(Players::Human.new, Players::Human.new)
      else
        puts "That is not a valid option"
      end
      new_game.play
  
